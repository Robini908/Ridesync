# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ridewave?schema=public"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxx"
CLERK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxx"

# Stripe Payments
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxx"

# Mapbox Maps & Geolocation
NEXT_PUBLIC_MAPBOX_TOKEN="pk.xxxxxxxxxxxxxxxxxxx"

# Redis Caching
REDIS_URL="redis://localhost:6379"

# xAI Grok API
XAI_API_KEY="xai-xxxxxxxxxxxxxxxxxxx"

# Application Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="RideWave"

# Email Settings (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Webhook URLs
NEXT_PUBLIC_WEBHOOK_URL="http://localhost:3000/api/webhooks"

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_REAL_TIME_TRACKING="true"
ENABLE_PUSH_NOTIFICATIONS="true"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# Security
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-32-character-encryption-key"